@using MVC_OnlineTicariOtomasyon.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Products</h2>
<br />
<table class="table table-bordered" style="margin-top:15px">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Brand</th>
        <th>Product Stock</th>
        <th>Product Purchase</th>
        <th>Product Sale</th>
        <th>Product Critical</th>
        <th>Product Category</th>
        <th>Product Image URL</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.ProductBrand</td>
            <td>@item.ProductStock</td>
            <td>@item.ProductPurchase</td>
            <td>@item.ProductSale</td>
            <td>@item.ProductCritical</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.ProductImage</td>
            <td>
                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.ProductID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you really want to delete ?')" })
                <a href="/Category/GetCategory/@item.ProductID" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Update</a>
            </td>
        </tr>
    }
</table>
<a href="/Category/AddCategory" class="btn btn-success"><i class="fas fa-plus-circle"></i> Add New Product</a>

