@model MVC_OnlineTicariOtomasyon.Models.Classes.Employee
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Update Customer</h2>
<br />

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.EmployeeID)
        <label>Enter the Employee Name</label>
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        <br />
        <label>Enter the Employee Surname</label>
        @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
        <br />
        <label>Select the Employee Department</label>
        @Html.DropDownListFor(model => model.DepartmentID, (List<SelectListItem>)ViewBag.employeeDepartment, new { @class = "form-control" })
        <br />
        <label>Enter the Employee Image URL</label>
        @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
        <br />
    </div>
    <button class="btn btn-info" id="btnUpdate">Update</button>
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $('#btnUpdate').click(function () {
        alert('Update customer was successful!')
    });
</script>

