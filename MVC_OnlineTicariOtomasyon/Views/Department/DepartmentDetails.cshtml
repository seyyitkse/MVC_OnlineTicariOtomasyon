@using MVC_OnlineTicariOtomasyon.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Department Details</h2>
<br />
<ol class="breadcrumb mb-4" >
    <li class="breadcrumb-item active" >@ViewBag.departmentName</li>
</ol>
<table class=" table table-hover">
    <tr>
        <th>Employee</th>
        <th>Photo</th>
        <th>Sales</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeName @item.EmployeeSurname</td>
            <td><img src="@item.EmployeeImage" /></td>
            <td><a href="/Department/DepartmentEmployeeSales/@item.EmployeeID" class="btn btn-success"><i class="fas fa-shopping-basket"></i> Sales</a></td>
        </tr> 
     }
    </table>