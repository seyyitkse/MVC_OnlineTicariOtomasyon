@model MVC_OnlineTicariOtomasyon.Models.Classes.Department
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Add New Department</h2>
<br />
<form class="form-group" method="post">
    <label>Enter the Department Name</label>
    @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" id="btnAdd">Add</button>
</form>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $('#btnAdd').click(function () {
        alert('Adding department was successful!')
    });
</script>
