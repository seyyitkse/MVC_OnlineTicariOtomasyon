<div id="small-dialog" class="mfp-hide book-form">

    <div class="login-form login-form-left">
        <div class="agile-row">
            <h3>Customer Login Form</h3>
            <span class="fa fa-lock"></span>
            <div class="clear"></div>
            <div class="login-agileits-top">
                @using(Html.BeginForm("Partial2","Login",FormMethod.Post))
                {
                    <input type="text" class="name" name="CustomerMail" Placeholder="Mail" required="" />
                    <input type="password" class="password" name="CustomerPassword" Placeholder="Password" required="" />
                    <input type="submit" value="Login">
                }
            </div>
            <div class="login-agileits-bottom">
                <h6><a href="#">Forgot password?</a></h6>
            </div>
        </div>
    </div>

</div>
