@model MVC_OnlineTicariOtomasyon.Models.Classes.Customer

@using (Html.BeginForm("UpdateInfo", "CustomerPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        @*<div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
                </div>
