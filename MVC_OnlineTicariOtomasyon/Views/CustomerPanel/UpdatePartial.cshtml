        @Html.HiddenFor(x => x.CustomerID)
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Surname</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Change my password
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" id="btnUpdate" class="btn btn-danger">Update</button>
            </div>
        </div>
    </form>
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $('#btnUpdate').click(function () {
        alert('The information update was successful!')
    });
</script>