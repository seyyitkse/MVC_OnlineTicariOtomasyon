@using MVC_OnlineTicariOtomasyon.Models.Classes
@model List<Sales>
@{
    ViewBag.Title = "CustomerOrders";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<br />
<h2>My Orders</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.customerName</li>
</ol>
<table class=" table table-hover">
    <tr>
        <th>Sales ID</th>
        <th>Date</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SalesID</td>
            <td>@item.SalesDate.ToShortDateString()</td>
            <td>@item.Product.ProductName (@item.Product.ProductBrand)</td>
            <td>@item.SalesPrice</td>
            <td>@item.SalesQuantity</td>
            <td>@item.SalesTotalPrice</td>
        </tr>

    }
</table>


